
get_filename_component(SELF_DIR ${CMAKE_CURRENT_LIST_FILE} PATH)

find_program(Falcon_faldoc_EXECUTABLE faldoc.sh ${Falcon_BINARY_DIR})

function(faldoc_module_docs modulename input_file output_dir)
  if(Falcon_IN_CORE_SOURCETREE)
    set(_cmd
      ${CMAKE_COMMAND}
        -Dexecutable=falcon
        -Dworkdir=${CMAKE_CURRENT_BINARY_DIR}
        -Darguments="${Falcon_SOURCE_DIR}/apps/faldoc/src/faldoc.fal ${input_file}"
      -P ${CMAKE_BINARY_DIR}/${FALCON_BIN_DIR}/executable_wrapper.cmake
      )
    set(_dependencies falpack compiler_fm)

  else()
    set(_cmd ${Falcon_faldoc_EXECUTABLE} -S -P faldoc ${CMAKE_CURRENT_SOURCE_DIR}/src/faldoc.fal)
  endif()

  add_custom_command(
    OUTPUT ${output_dir}/index.html
    COMMAND ${_cmd}
    DEPENDS ${input_file} ${ARGN}
  )

  add_custom_target(${modulename}_module_docs ALL DEPENDS ${output_dir}/index.html)
  #
  if(Falcon_IN_CORE_SOURCETREE)
    add_dependencies(${modulename}_module_docs faldoc)
  endif()
endfunction(faldoc_module_docs)