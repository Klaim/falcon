<? function skin( data, srv, item, depth ) ?>
   <? if item.target ?>
      <a href="<?=item.target?>" target="<?= item.wnd ?>"><?=item.text?></a>
   <? elif item.current ?>
      <span class="nest_menu_current"><?=item.text?></span>
   <? else ?>
      <span class="nest_menu"><?=item.text?></span>
   <? end ?>

   <? if item.submenu ?>
      <div class="nest_menu_sub">
      <? data.skin( data, srv, item.submenu, depth + 1 ) ?>
      </div>
   <? end ?>
<? end ?>