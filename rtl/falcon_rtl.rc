//
// Version
//

// for project wide versioning...
#include <falcon/config.h>
#include <falcon/rc_version.h>

// and application versioning
#include "version.h"


VS_VERSION_INFO VERSIONINFO
 FILEVERSION FALCON_MAKE_VERSION_NUMBER( RTL_VERSION_MAJOR, RTL_VERSION_MINOR, RTL_VERSION_REVISION, 0 )
 PRODUCTVERSION FALCON_VERSION_RCINFO_N
 FILEFLAGSMASK 0x17L
#ifdef _DEBUG
 FILEFLAGS 0x1L
#else
 FILEFLAGS 0x0L
#endif
 FILEOS 0x4L
 FILETYPE 0x2L
 FILESUBTYPE 0x0L
BEGIN
    BLOCK "StringFileInfo"
    BEGIN
        BLOCK "041004b0"
        BEGIN
            VALUE "CompanyName", "Falcon Committee"
            VALUE "FileDescription", "Falcon runtime library"
            VALUE "FileVersion", FALCON_MAKE_VERSION_STRING_RC( RTL_VERSION_MAJOR, RTL_VERSION_MINOR, RTL_VERSION_REVISION, 0 )
            VALUE "InternalName", "RTL"
            VALUE "LegalCopyright", "The Falcon Programming Language License"
            VALUE "OriginalFilename", "falcon_rtl.dll"
            VALUE "ProductName", "The Falcon Programming Language"
            VALUE "ProductVersion", FALCON_VERSION_RCINFO
        END
    END
    BLOCK "VarFileInfo"
    BEGIN
        VALUE "Translation", 0x410, 1200
    END
END


