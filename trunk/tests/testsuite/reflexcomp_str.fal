load compiler

str = "
	array = [1, 2,3,4]
	val = 0
	for e in array
		val += e
   end

   return val "

comp = Compiler()

mod = comp.compile( "my_module", str )

if mod.get( "__main__" )() != 10: failure( "Compilation result" )

success()
