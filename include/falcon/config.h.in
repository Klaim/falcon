#ifndef FLC_CONFIG_H
#define FLC_CONFIG_H

//============================================
// Version informations
//
#define FALCON_VERSION_NUM          ( @FALCON_VERSION_MAJOR@ <<16 | @FALCON_VERSION_MINOR@ <<8 | @FALCON_VERSION_REVISION@ )
#define FALCON_VERSION              "@FALCON_VERSION_ID@"
#define FALCON_VERSION_NAME         "@FALCON_VERSION_NAME@"


//============================================
// System informations
//

// Basic system. May be either
//   - FALCON_SYSTEM_UNIX
//   - FALCON_SYSTEM_WIN
//   - FALCON_SYSTEM_MAC

#cmakedefine FALCON_SYSTEM_UNIX
#cmakedefine FALCON_SYSTEM_WIN
#cmakedefine FALCON_SYSTEM_MAC

#define FALCON_HOST_SYSTEM          "@FALCON_HOST_SYSTEM@"
#define FALCON_LITTLE_ENDIAN        @FALCON_LITTLE_ENDIAN@

//============================================
// Config informations
//
#ifdef FALCON_SYSTEM_WIN 
   #define FALCON_DEFAULT_BIN          "@FALCON_PREFIX@\\bin"
   #define FALCON_DEFAULT_LIB          "@FALCON_PREFIX@\\lib"
   #define FALCON_DEFAULT_CONFIG       "@FALCON_PREFIX@\\etc"
   #define FALCON_DEFAULT_LOAD_PATH    ".;@FALCON_PREFIX@\\bin"
#else
   #define FALCON_DEFAULT_BIN          "@FALCON_PREFIX@/bin"
   #define FALCON_DEFAULT_LIB          "@FALCON_PREFIX@/lib"
   #define FALCON_DEFAULT_CONFIG       "/etc"
   #define FALCON_DEFAULT_LOAD_PATH    ".;@FALCON_PREFIX@/lib/falcon"
#endif

#endif

