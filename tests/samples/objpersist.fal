load dbi
load sample_db

function showNames( message, d )
	> message
   > "=========================================="
   
   rs = d.query( "SELECT * FROM names" )
   while ( let p = rs.fetchObject( Person() ) )
   	> p.name, " was born on ", p.dob
   end
   rs.close()
   >
end

d = connect()
createNamesTable( d )

ts = TimeStamp()
ts.currentTime()

showNames( "Before inserting Jack", d )

t = Person( "Jack", ts )
t.insert()
showNames( "After insertion of Jack via Object Persistence", d )

t.name = "Jim"
t.update()
showNames( "After changed name to Jim", d )

t.delete()
showNames( "After deleted Jim", d )

dropNamesTable( d )
d.close()
