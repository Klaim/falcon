load sdlmixer

try
   a = SDL.InitAuto( SDL.INIT_AUDIO )
   MIX.OpenAudio( 44100, AUDIO.S16, 2, 4096 )
   MIX.AllocateChannels( 2 )
   sound = MIX.LoadWAV( "fading.ogg" )
   sound.Play( -1, -1 )

   > "Success. Press enter to stop"
   input()

   MIX.CloseAudio()
catch in e
   > "Test failed: "
   > e
end

