function fib( n )
   if n < 2
      return n
   else
      return fib(n-1) + fib(n-2)
   end
end

/* Uses a default fib value */
/* args is provided by the VM */

if len( args ) > 0
   reach = int(args[0])
else
   reach = 30
end

clock = seconds()
printl( fib( reach ) )
printl( "Elapsed time: ", (seconds() - clock ) )

/* end */
