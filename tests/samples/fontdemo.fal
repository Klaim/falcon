load pdf

pageTitle = "Font Demo"
fontName = "Helvetica"

p = PDF()

page = p.addPage()
page.lineWidth = 1.0
page.rectangle( 50.0, 50.0, page.width - 100.0, page.height - 100.0 );
page.stroke()

page.fontName = "Helvetica"
page.fontSize = 24.0
tw = page.textWidth( pageTitle )
page.beginText()
page.textOut( (page.width - tw) / 2, page.height - 50, pageTitle)
page.endText()

page.beginText()
page.fontSize = 16.0
page.textOut( 60.0, page.height - 80.0, "<Standard Type1 font samples>" )
page.endText()

page.beginText()
page.textX = 60.0
page.textY = page.height - 105.0

fontList = ["Courier", "Courier-Bold", "Courier-Oblique", "Courier-BoldOblique",
   "Helvetica", "Helvetica-Bold", "Helvetica-Oblique", "Helvetica-BoldOblique",
   "Times-Roman", "Times-Bold", "Times-Italic", "Times-BoldItalic", "Symbol",
   "ZapfDingbats" ]
for fn in fontList
    sampText = "abcdefgABCDEFG12345!#$%&+-@?"
    page.fontSize = 9.0
    page.fontName = fn
    page.showText( fn )
    page.textX = 0.0
    page.textY = -18.0

    page.fontSize = 20.0
    page.showText( sampText )
    page.textX = 0.0
    page.textY = -20.0

    > "Outputting font sample for: ", page.fontName
end

page.endText()

p.saveToFile( "fontdemo.pdf" )
> "Open fontdemo.pdf"

