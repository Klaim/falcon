load dbi
load sample_db

d = connect()
createNamesTable(d)

> "Array query"

nameFilter = "%"
if len( args ) > 0: nameFilter = args[0]

r = d.query( "SELECT name,dob FROM names WHERE name LIKE $1 ORDER BY dob", nameFilter )
while (let a = r.fetchArray() )
	> a[0], " was born on ", a[1]
end
r.close()

dropNamesTable(d)

d.close()
