<?
   title = "A parsed falcon template document!"
   thingToSay = args.len() > 0 ? args[0] : "No argument"
?><html>
<head>
<title><?=title?></title>
</head>
<body>
<? makeTitle( "Hello" )?>

<? if args.len() > 0 ?>
<p>You said something: <? print( thingToSay )?></p>
<? else ?>
<p>You said nothing</p>
<? end ?>
</body>
</html><?
   function makeTitle( param )
      < "<H1>", param, "</H1>"
   end
?>