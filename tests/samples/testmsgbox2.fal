load DynLib

l = DynLib( "user32.dll" )
k = DynLib( "kernel32.dll" )
MessageBox = l.get( "MessageBoxW", "I", "P W W I" ).call
GetLastError = k.get( "GetLastError" ).call

n = 4 || 32
v = MessageBox(  
    0,
    "こんにちは、世界よ！",
    "Hello",
    $n
)

> "Ops: ", v, " le: ", GetLastError()