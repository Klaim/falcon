load sdlmixer

try
   a = SDL.InitAuto( SDL.INIT_AUDIO )
   MIX.OpenAudio( 44100, AUDIO.S16, 2, 4096 )
   MIX.AllocateChannels( 3 )
   sound = MIX.LoadWAV( "fading.ogg" )
   sound.Play( 0, -1 )

   // perform a bit of echo
   MIX.Volume( 1, 60 )
   MIX.Volume( 2, 40 )
   sleep( 0.30 )
   sound.Play( 1, -1 )
   sleep( 0.30 )
   sound.Play( 2, -1 )


   > "Success. Press enter to stop"
   count = 0
   stdin = stdIn()
   loop count++
      >> @"[$(count)]\r"
      if stdin.readAvailable(0.010): break
   end

   MIX.CloseAudio()
catch in e
   > "Test failed: "
   > e
end

