load sdl

try
   a = SDL.InitAuto( SDL.INIT_VIDEO )
   screen = SDL.SetVideoMode( 640, 480 )

   // draw a cloured band
   band = MemBuf( 640, 4 )

   for bid in [0:640]
      band[bid] = screen.MakeColor( 150, bid%128, (bid+128)%256,  250 )
   end

   pixels = screen.pixels

   for y in [0: 480]
      for x in [0: 640]
         n = x + y * 640
         pixels[ n ] = band[x]
      end
   end


   screen.UpdateRect()

   > "Success! - press enter"
   input()
catch in e
   > "Test failed: "
   > e
end

