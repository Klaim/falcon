load sdlmixer


object listener from SDLEventHandler
   function onMusicFinished()
      > "Music finished."
      exit(0)
   end

   function onQuit()
      > "Quitting"
      exit(0)
   end
end


try
   a = SDL.InitAuto( SDL.INIT_AUDIO || SDL.INIT_VIDEO )

   MIX.OpenAudio( 44100, AUDIO.S16, 2, 4096 )
   music = MIX.LoadMUS( "fading.ogg" )

   > "Success. Press enter to stop"

   music.Play()
   MIX.HookMusicFinished( true )
   count = 0
   stdin = stdIn()
   loop
      count++
      >> @"[$(count)]\r"
      listener.PollEvent()
   end stdin.readAvailable(0.1)

   MIX.CloseAudio()
catch in e
   > "Test failed: "
   > e
end

