import from hpdf

PAGE_WIDTH = 420
PAGE_HEIGHT = 400
CELL_WIDTH = 20
CELL_HEIGHT = 20
CELL_HEADER = 10

function drawGraph(page)
  // Draw 16 X 15 cells

  // Draw vertical line 
  HPDF_Page_SetLineWidth (page, 0.5);

  for i = 0 to 17
    x = i * CELL_WIDTH + 40;
    page.moveTo(x, PAGE_HEIGHT - 60)
    page.lineTo(x, 40)
    page.stroke()
    if i > 0 and i <= 16 
      page.beginText()
      page.moveTextPos(x + 5, PAGE_HEIGHT - 75);
      num = i - 1
      buf = @"$(num:X)"
      page.showText(buf);
      page.endText()
    end
  end

  // Draw horizontal lines
  for i = 0 to 15
    y = i * CELL_HEIGHT + 40
    page.moveTo(40, y)
    page.lineTo(PAGE_WIDTH - 40, y)
    page.stroke()
    if i < 14
      page.beginText()
      page.moveTextPos(45, y + 5)
      num = 15 - i
      buf = @"$(num:X)"
      page.showText(buf)
      page.endText()
    end
  end
end


function drawFonts(page)
  page.beginText()
   // Draw all character from 0x20 to 0xFF to the canvas
  for i in [1:17]
    for j in [1:17]
      y = PAGE_HEIGHT - 55 - ((i - 1) * CELL_HEIGHT);
      x = j * CELL_WIDTH + 50;
      buf = chr(0)/( (i - 1) * 16 + (j - 1) )
      if ord(buf) >= 32
        d  = x - page.textWidth(buf) / 2
       page.textOut(d, y, buf)
      end
    end
  end
  page.endText()
end

