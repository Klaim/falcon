/****************************************************************************
* DynLib - Falcon dynamic library loader module - test suite
*
* ID: 4a
* Category: opaque
* Subcategory:
* Short: Opaque types
* Description:
*   Checks for correct usage of opaque types.
* [/Description]
*
****************************************************************************/

load dynlib

try
   // setup
   l = DynLib( "./test_dynlib." + dynExt() )

   // String pointer
   mb = MemBuf(100)
   make = l.get( "call_rsz", "MyItem", "" ).call
   test = l.get( "call_psz_ri_check", "I", "MyItem" ).call

   data = make()
   if data.toString() != "DynOpaque: MyItem"
      failure( "Data not opaqued" )
   end

   if test( data ) != 0
      failure( "Data not correctly used" )
   end
   
   success()
catch DynLibError in e
   failure( e.toString() )
end
