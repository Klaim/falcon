/*
@name MultiTokenizer grouping
@category Core-various

@output
MultiTokenizer Grouping
Grouping off:
Sequence: 'a', '', 'b', '', 'c', 'd', 'e'.
==================================================
Grouping on:
Sequence: 'a', 'b', 'c', 'd', 'e'.
Done
@endoutput
*/

> "MultiTokenizer Grouping"

function test(mt)
   for piece in mt
      forfirst: >> "Sequence: "
      >> "'",piece,"'"
      formiddle: >> ", "
      forlast: > "."
   end
end

> "Grouping off:"
mt = MultiTokenizer( "a,,b;;c d.e" )
mt.add( r",|;", " ", "." )

//mt.giveTokens = true
test(mt)

> "="*50
> "Grouping on:"
mt.rewind()
mt.groupTokens = true
test(mt)

> "Done"
