function map_func( a )
   if a < 0: raise nil
   return a * a
end

// empty mapping
if max() != nil: failure( "Empty set" )

if max( 1 ) != 1
   failure( "One element" )
end

if max( 3, 1 ) != 3
   failure( "Two elements" )
end

object test
   function compare( a )
      if typeOf( a ) != IntegerType: return nil
      if a > 0: return -1
      if a < 0: return 1
      return 0
   end
end

if max( -3, -2, test ) != test
   failure( "Elements with compare overload" )
end


success()

