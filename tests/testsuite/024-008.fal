/*
@name MultiTokenizer Group and Get
@category Core-various

@output
MultiTokenizer Group and Get
Getting off, Grouping off:
Sequence: 'a', '', 'b', '', 'c', 'd', 'e', '', ''.
==================================================
Getting off, Grouping on
Sequence: 'a', 'b', 'c', 'd', 'e', ''.
==================================================
Getting on, Grouping on:
Sequence: 'a', ',', 'b', ';', 'c', ' ', 'd', '.', 'e', ';', ''.
Done
*/

> "MultiTokenizer Group and Get"

function test(mt)
   for piece in mt
      forfirst: >> "Sequence: "
      >> "'", piece, "'"
      formiddle: >> ", "
      forlast: > "."
   end
end

> "Getting off, Grouping off:"
mt = MultiTokenizer( "a,,b;;c d.e;;" )
mt.add( r",|;", " ", "." )

test(mt)

> "="*50
> "Getting off, Grouping on"
mt.rewind()
mt.groupTokens = true
test(mt)

> "="*50
> "Getting on, Grouping on:"
mt.rewind()
mt.giveTokens = true
mt.groupTokens = true
test(mt)

> "Done"
