string = "H8ere is a st0ri9ng"
result = ""

for c in string
   if c >= "0" and c <= "9"
      continue dropping
   end

   if c == " "
      .= "-"
   end

   result += c
end

if string.len() != 16: failure( "base - Changed string size" )
if string != "Here-is-a-string": failure( "base - Changed string content" )
if result != "Here is a string"
	failure( "base - String result" )
end

