string = "H8ere is a st0ri9ng"
result = ""

for c in string
	forfirst: result += ":"
   if c >= "0" and c <= "9"
      continue dropping
   end

   if c == " "
      .= "-"
   end

   result += c

   formiddle: result += ","
   forlast: result += ","
end

if string.len() != 16: failure( "formiddle&forlast - Changed string size" )
if string != "Here-is-a-string": failure( "formiddle&forlast - Changed string content" )
if result != ":H,e,r,e, ,i,s, ,a, ,s,t,r,i,n,g,"
	failure( "formiddle&forlast - String result" )
end

