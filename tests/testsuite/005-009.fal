> "Dictionary basic operators"

function testDict( dict, array )	
	> 'Nil:', dict[nil]
	> 'true:', dict[true]
	> 'A:', dict['a']
	> 'B:', dict['b']
	> 'C:', dict['c']
	> 'Array:', dict[array]
end

// try standard dict
> "Old-fashion dicts"
array = []
dict = [
    nil => 0,
	true => "Ok",
	'a' => 1,
	'b' => 2,
	'c' => 3,
	array => 'array']
testDict(dict, array)
	
> "Dot-dicts"
array = []
dict = .[
    nil => 0
	true => "Ok"
	'a' => 1
	'b' => 2
	'c' => 3
	array => 'array']
testDict(dict, array)	

> "Class instances dicts"
array = []
dict = Dictionary(
    nil, 0,
	true, "Ok",
	'a', 1,
	'b', 2,
	'c', 3,
	array, 'array'
	)
testDict(dict,array)

> "Done."
