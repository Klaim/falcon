/*
@name Simple for/to loops on same level
@category Loops

@output   
Testing basic for i = 5 to 5
Looping: 5

Testing basic for i = 5 to 5, -1
Looping: 5

Testing basic for i = 5 to 5, -2
Looping: 5
Done
@endoutput
*/

x = VMContext()
dd = x.dataDepth
> "Testing basic for i = 5 to 5"
for i = 5 to 5
   > "Looping: ", i
end

dd1 = x.dataDepth
if dd != dd1
   raise "Corrupted stack at loop 1"
end

>
> "Testing basic for i = 5 to 5, -1"
for i = 5 to 5,-1
   > "Looping: ", i
end
dd1 = x.dataDepth
if dd != dd1
   raise "Corrupted stack at loop 1"
end

>
> "Testing basic for i = 5 to 5, -2"
for i = 5 to 5,1
   > "Looping: ", i
end
dd1 = x.dataDepth
if dd != dd1
   raise "Corrupted stack at loop 1"
end

> "Done"
