if len( keys_last ) != 1: failure( "3 element dict for last: key retrival" )
if len( values_last ) != 1: failure( "3 element dict for last: value retrival" )

// 4 elements dictionary
dict = [ 1 => "a", 2 => "b", 3 => "c", 4 => "d" ]
