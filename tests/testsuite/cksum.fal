function checksum( data )

   ret = 0;
   bitmask = 1 << 8;
   size = data.len();

   converter = data.type() == StringType ? \
      lambda n => data[*n] : \
      lambda n => data[n] \

   pos = 0
   while pos < size
      ret += converter(pos) << bitmask;

      if bitmask == 0
         bitmask = 1 << 8;
      else
         bitmask--;
      end

      ++pos;
   end

   return ret
end

function checksum_32( data )
   ck = checksum( data )
   ck32 = ck && 0xFFFFFFFF;
   return ck32
end

export
