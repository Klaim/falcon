/*
@name Regex "replace" method
@category Regex

@output
Testing RE.replaceFirst
R'a(.)c'.replaceFirst('abcabc', '-\0-'): m"-abc-abc"
R'a(.)c'.replaceFirst('abcabc', '-\1-'): m"-b-abc"
R'a(.)c'.replaceFirst('aaaabc', '-\0-'): m"aaa-abc-"
R'a(.)c'.replaceFirst('aaaabc', '-\1-'): m"aaa-b-"
R'a(.)c'.replaceFirst('bbb', '-\0-'): Nil
R'a(.)c'.replaceFirst('bbb', '-\1-'): Nil
R'a(.)c'.replaceFirst('xxaccxaacx', '-\0-'): m"xx-acc-xaacx"
R'a(.)c'.replaceFirst('xxaccxaacx', '-\1-'): m"xx-c-xaacx"
R'a(.)c'.replaceFirst('AAA', '-\0-'): Nil
R'a(.)c'.replaceFirst('AAA', '-\1-'): Nil
R'a(.)c'.replaceFirst('ABC', '-\0-'): m"-ABC-"
R'a(.)c'.replaceFirst('ABC', '-\1-'): m"-B-"
R'a(.)c'.replaceFirst('xxABCxxABC', '-\0-'): m"xx-ABC-xxABC"
R'a(.)c'.replaceFirst('xxABCxxABC', '-\1-'): m"xx-B-xxABC"
@endoutput
*/

> "Testing RE.replaceFirst"
regex = r'a(.)c'i

for expr in .[ m"abcabc" m"aaaabc" m"bbb" m"xxaccxaacx" m"AAA" m"ABC" m"xxABCxxABC" ]
   > regex,".replaceFirst('",expr,"', '-\\0-'): ", regex.replaceFirst(expr, '-\0-').describe()
   > regex,".replaceFirst('",expr,"', '-\\1-'): ", regex.replaceFirst(expr, '-\1-').describe()
end
