if ord( "a" ) != ord( "b" ) - 1: failure("ord")
if chr( 10 ) != "\n": failure( "chr" )
if ord( chr( 10 ) ) != 10: failure( "ord(chr)" )
if chr( ord( "\n" ) ) != "\n": failure( "chr(ord)" )

try
   ord( 10 )
   failure( "ord(10): error not raised" )
end

try
   chr( "a" )
   failure( "chr(\"a\"): error not raised" )
end

success()

