a = 3

/* Leave a space below the switch; It is needed to test for
   switch context change.
*/
switch a

   case 1
      failure( "Wrong case: one" )

   case 2
      failure( "Wrong case: two" )

   case 3
      success()

   case 4
      failure( "Wrong case: four" )

   default
      failure( "Wrong case: default" )

end

failure( "Switch skipped" )

