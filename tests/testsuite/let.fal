v = nil
let( $v, 0 )
if v != 0: failure( "direct let" )

v = nil
let( $v, .[random 1 10] )
if v == nil: failure( "indirect let" )

v = nil
eval( .[ let $v .[random 1 10] ] )
if v == nil: failure( "evaluated let" )

success()

