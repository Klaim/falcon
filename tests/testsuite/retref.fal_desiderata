item1 = 0
item2 = 0

function retref( param )
   if param: return $item1
   return $item2
end

function retref_param( param1 )
   return $param1
end

var = $retref( 1 )
var = 10
printl(item1, " ", item2 )
//if item1 != 10: failure( "Global reference return" )

value = 0
var2 = retref_param( $value )
var2 = 10
if value != 10: failure( "Parameter reference return" )

success()
/* End of file */