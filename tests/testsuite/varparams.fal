/****************************************************************************
* DynLib - Falcon dynamic library loader module - test suite
*
* ID: 2e
* Category: guarded
* Subcategory:
* Short: Variable params specifier
* Description:
*   Check for the variable parameters specifier to actually change the parser
*   into unguarded mode.
* [/Description]
*
****************************************************************************/

load dynlib
load cksum

try
   // setup
   l = DynLib( "./test_dynlib." + dynExt() )
catch DynLibError in e
   failure( e.toString() )
end

// use a parameterless call to avoid problems in case of messups
f = l.get( "call_p0_ri", "I", "..." ).call
// empty test
f()

// some params test
f( 1, 2, 3 )

f = l.get( "call_p0_ri", "I", "I, S, ..." ).call

//minimal call
f( 1, "hello" )

// some more params
f( 1, "hello", "another" )

success()
