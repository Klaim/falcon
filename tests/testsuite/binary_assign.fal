a = 0xFF00
b = 0x0FF0

c = a
c &= b
if c != 0x0F00: failure( "AND" )

c = a
c |= b
if c != 0xFFF0: failure( "OR" )

c = a
c ^= b
if c != 0xF0F0: failure( "XOR" )

c = a
c <<= 1
if c != 0x1FE00: failure( "SHL 1" )

c = a
c >>= 1
if c != 0x7F80: failure( "SHR 1" )

c = a
c <<= 8
if c != 0xFF0000: failure( "SHL 8" )
c = a
c >>= 8
if c != 0xFF: failure( "SHR 8" )

success()

