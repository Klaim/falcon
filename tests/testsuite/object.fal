function func()
   return [1,2]
end

object zero
   prop_one = nil
   prop_two = func()

   init
      self.prop_one = "hello"
   end

   function method()
      return self.prop_one + " world"
   end
end

if zero.prop_one != "hello": failure( "Initializer" )
if len( zero.prop_two ) != 2: failure( "Automatic complex initializer" )
if zero.method() != "hello world": failure( "Method call" )

success()

