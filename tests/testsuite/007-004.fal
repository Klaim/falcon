@endoutput

*/

> "Rule init based generator"


a = 0
b = 0
inc = function ( v )
   var = init
   if not var
      var = 0
   end
   
   if var < 3
      init = var + 1
      return? var
   else
      return var
   end
end


rule
   a = inc()
   b = inc()
   > @"A: $a; B: $b" 
   false
   or
   > "Done!!"
end

