a = 10
c = 0

// minimal nested while
while a > 0
  a --
  b = 10
  while b > 0
     b --
  end
  if b != 0: failure( "Nested exit" )
  c ++
  if c > 10: failure( "Nested repetition" )
end

if a != 0: failure( "Loop condition - 1" )
if c != 10: failure( "Loop execution - 1" )

success()

