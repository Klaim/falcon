> "String methods - split"

tests = .[ 
   .["" "", -1]
   .["" ",", -1]
   .["," ",", -1]
   .["one" "", -1]
   .["one" ",", -1]
   .["one,two" ",", -1]
   .["one,,two" ",", -1]
   .["one,,two," ",", -1]
