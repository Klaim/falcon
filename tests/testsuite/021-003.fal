   .["one,two,three" "," 1]
   .["one,two,three" "," 2]
   .["one,two,three" "," 3]
   .["one,two,three" "," 4]
]

function test( code, x )
   > @"\"${x[0]}\",\"${x[1]}\",${x[2]} =>", code(x).describe()
end

> "Test as a method:"
^[ tests ] .[test {(x) x[0].split(x[1],x[2]) }]

> "Test as a static function:"
^[ tests ] .[test {(x) String.split(x[0],x[1],x[2]) }]

