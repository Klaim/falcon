/*
   Client SSL socket.
 */

import from socket

s = socket.TCPSocket()
s.connect( 'www.openssl.org', 443 )
while not s.isConnected(): sleep(1)
> "==== Connected!"

//s.sslConfig( false, socket.SSLv3, 'keyd.crt', 'keyd.key' )
s.sslConfig( false, socket.SSLv3 )
s.sslConnect()
> "==== SSL Connected!"

i = s.sslWrite( "GET /\r\n\r\n" )
> @ "==== $(i) bytes written!"

buf=''
txt=''
while (i = s.sslRead(buf,4098)) == 4098
   txt += buf
end
if i != 0: txt += buf
> buf


s.sslClear()
s.close()
exit()

