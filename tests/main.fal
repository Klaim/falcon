// simplest test

load gtk

// initialize gtk
m = GtkMain( args )

// custom window
class MyWindow from GtkWindow
    // delete callback
    function on_delete_event()
        m.quit()
        return false
    end
    // button clicked
    function on_clicked()
        > "Yay!"
    end
    // constructor
    init
        // set window title
        //self.set_title( "Falcon" )
        // set window title using a generic property setter
        self.set_property( "title", "Falcon" );
        // connect to delete-event
        self.signal_delete_event().subscribe( self )
        // make a vertical box
        vbox = GtkVBox()
        self.add( vbox )
        // add a label
        lbl = GtkLabel( "Hello World" )
        vbox.add( lbl )
        // add a button
        btn = GtkButton( "Falcon!" )
        btn.signal_clicked().subscribe( self )
        vbox.add( btn )
    end
end

w = MyWindow()

m.run( w )
