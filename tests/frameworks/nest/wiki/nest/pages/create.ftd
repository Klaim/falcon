<?
   dm = Nest.dm( "wiki_db" )

   // add the wiki service
   wiki = Nest.service("Wiki")

   // in this page, we don't want to see any wiki page.
   wiki.mute = true
   
   if Request.getField("create", "" ) == "yes"
      dm.create()
      wiki.initialize()
      Reply.redirect( Nest.pageLink("home") )
   end
