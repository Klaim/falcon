// Configuration for FORM test -- data control service

import from nest.dbview in dw

// Entity on which operate
entity = Nest.dm( "form_db" ).entity( "users" )

// Used when asking for record deletion confirm
view = dw.DBView( entity )
view.fields = .[
   dw.DBViewField( "first_name", "", {v=>htmlEscape(v)} )
   dw.DBViewField( "last_name", "", {v=>htmlEscape(v)} )
   dw.DBViewField( "user_id", "", {v=>"(" + htmlEscape(v) + ")" } )
]
