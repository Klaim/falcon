import from api

/*******************************************************************************
<object name="GetCurrentTime">
    <description>
        Implements the API object functionality.
    </description>
</object>
*******************************************************************************/
object GetCurrentTime from api.Wrapper(
    "GetCurrentTime",
    i"Gets the current time.")

    /***************************************************************************
    <function name="go">
        <description see="self">
        <return>
            The current time.
        </return>
    </function>
    ***************************************************************************/
    function go()
        timeStamp = TimeStamp()
        return timeStamp.currentTime().toString("%X %x")
    end
end

GetCurrentTime.execute()
