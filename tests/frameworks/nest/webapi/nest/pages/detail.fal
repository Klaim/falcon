import from web.htmaker in htmaker

functionName = Request.getField("function")

doc = htmaker.TransitionalFrame()

.[doc.html.add
    htmaker.Head()
    htmaker.Body()
]()

.[doc.html.head.add
    htmaker.Title(functionName)
    htmaker.Verbatim(Nest.headings())
]()

.[doc.html.body.add
    htmaker.H1(functionName)
    htmaker.Div().add(htmaker.Verbatim(Nest.service("WebAPI").render()))
    htmaker.Div().add(htmaker.A(Nest.pageLink('home'), i"Back to Summary"))
]()

doc.render()
