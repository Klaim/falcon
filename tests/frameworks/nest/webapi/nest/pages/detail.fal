import from web.htmaker in htmaker

doc = htmaker.TransitionalFrame()
fd = Nest.service("WebAPIDetail", "", ["apidir" => "."])

functionName = fd.funcname.value

.[doc.html.add
    htmaker.Head()
    htmaker.Body()
]()

.[doc.html.head.add
    htmaker.Title("Details - "  + functionName)
    htmaker.Verbatim(Nest.headings())
]()

.[doc.html.body.add
    htmaker.H1(functionName)
    htmaker.Div().add(htmaker.Verbatim(fd.render()))
    htmaker.Div().add(htmaker.A(Nest.pageLink('home'), i"Back to Summary"))
]()

doc.render()
