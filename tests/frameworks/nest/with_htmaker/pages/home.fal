import from nest
import from htmaker in ht

doc = ht.TransitionalFrame()
.[ doc.html.head.add
   ht.Title( "Hello world!" )
   ht.Meta( "description", "The hello world site" )
   ht.Meta( "keywords", "test, hello world" )
   ht.Link( "nest_test.css", "stylesheet" )
]()

.[ doc.html.body.add
   ht.H1( "Hello world!" )
   ht.P("Welcome in a very simple typical Nest web application." )
]()

> "home"
> doc.render()

