class blog_data


	

// subRegion: Section's data
	/* Get the Section List	*/
	function getSectionList()
		return self._fetch( "SELECT IDSection, Title FROM tBlogSections ORDER BY Title;" )
	end

// subRegion: Tag's data
	/* Get the Tag's List */
	function getTagList()
		return self._fetch( "SELECT Tag, count(*) as numHit FROM tBlogTags GROUP By Tag ORDER BY Tag;" )
	end


end