<?	function skin( data, srv ) 		
		rec = srv.getItemList()		
?> 
		<div id="main" class="blogMain">
<?		if rec.len() == 0 			?>
			any NEWS FOund!!
<?		else						?>		

<?			for news in rec			?>	
				<div class="blogItem">
					<div class="blogDate">
						<?= news.DateFormatted() ?>
					</div>
					<div class="blogTitle">
						<a href="/?pid=blogitem&id=<?= news.ID ?>"><?= news.Title ?></a>
					</div>					
		    		<div class="blogContent">
		    			<?= news.ShortCnt	?>
		    		</div>
<? 				if news.Content != news.ShortCnt ?>    		
		    		<div class="blogReadMore">
		    			[ Read More... ]
		    		</div>
<? 				end ?>
		    		<div class="blogInfo">
		    			<?= news.postedBy()?> &nbsp; <?= news.commentsNumber() ?>
		    			<br>
		    			<?= news.filedUnder() ?>&nbsp;-&nbsp;<?= news.tagList()?>
		    		</div>
				</div>
<? 			end	?>
			
<?		end	?>	
   		</div>   	   	
<? end ?>

