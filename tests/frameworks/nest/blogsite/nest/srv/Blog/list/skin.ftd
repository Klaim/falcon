<?	function skin( data, srv ) 		
		rec = srv.Item.getListByLast( 10 )
?> 
		<div id="blogdiv" class="blogdiv">		

<?		if rec.len() == 0 			?>
			any NEWS FOund!!
<?		else						?>		
			<table style="width: 100%;">	

<?			for news in rec			?>	
	    		<tr><td id="blogDate" class="blogDate">
	    			<?= news.Date ?>
	    		</td></tr>
	    		<tr><td id="blogTitle" class="blogTitle">
	    			<?= news.Title ?>
	    		</td></tr>
	    		<tr><td id="blogContent" class="blogContent">
	    			<?= news.ShortCnt	?>
	    		</td></tr>
<? if news.Content != news.ShortCnt ?>    		
	    		<tr><td id="blogReadMore" class="blogReadMore">
	    			[ Read More... ]
	    		</td></tr>
<? end ?>
	    		<tr><td id="blogPostedBy" class="blogPostedBy"><?= news.postedBy() ?></td></tr>
<?			end						?>
			</table>
<?		end							?>	
   		</div>
<? 
	end 
?>

