/****************************************************************************
* Falcon direct benchmarks
*
* ID: 4a
* Category: strings
* Subcategory:
* Short: Wide String assign
* Description:
*   Performance test on 10000000 string assignments.
* [/Description]
****************************************************************************/

loops = 10000000 * timeFactor()
each = int(loops/10)


str = "the string that will be accessed"
str7= "abc" // we'll change three chars

// getting time

time = seconds()
for i in [ 0 : loops ]
   str[5] = str7

   if i % each == 0
      alive( i/loops*100 )
   end
end
// taking end time
time = seconds() - time

// subtract alive time
timeAlive = seconds()
for i in [ 0 : loops ]
   if i % each == 0
      alive( i/loops*100 )
   end
end
timeAlive = seconds() - timeAlive
time -= timeAlive

timings( time, loops )

/* end of file */
