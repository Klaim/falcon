loops = 1000000 * timeFactor()
each = int(loops/10)


str = "the string that will be accessed"
str7= "abc" // we'll change three chars

// getting time

time = seconds()
for i = 1 to loops
   str[5] = str7

   if i % each == 0
      alive( i/loops*100 )
   end
end
// taking end time
time = seconds() - time

// subtract alive time
timeAlive = seconds()
for i = 1 to loops
   if i % each == 0
      alive( i/loops*100 )
   end
end
timeAlive = seconds() - timeAlive
time -= timeAlive

timings( time, loops )

