loops = 1000000 * timeFactor()
each = int(loops/10)

array = ["a string", ["an", "array"], 10, 11, 12.5, [13:15], 18]
range = [2:4]
arrins = [ 20, 30, 40 ]
// getting time

time = seconds()
for i = 1 to loops
   array[4] = "hello"

   if i % each == 0
      alive( i/loops*100 )
   end
end
// taking end time
time = seconds() - time

// subtract alive time
timeAlive = seconds()
for i = 1 to loops
   if i % each == 0
      alive( i/loops*100 )
   end
end
timeAlive = seconds() - timeAlive
time -= timeAlive

timings( time, loops )

