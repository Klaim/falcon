// Integer numbers
if abs( 1 ) != 1: failure( "abs integer positive" )
if abs( -1 ) != 1: failure( "abs integer negative" )
if abs( 0 ) != 0: failure( "abs zero" )

// positive
if abs( 1.5 ) != 1.5: failure( "abs on float" )
if abs( -1.5 ) != 1.5: failure( "abs on float neg" )
try
   floor( "alpha" )
   failure( "Error not risen for parameters" )
end

success()

